{deps, [{erlcloud, "0.13.6"},
        {cowboy, "1.0.4"},
        {jiffy, "0.14.7"},
        {beam_olympics, {git, "git@github.com:inaka/beam_olympics.git", {tag, "1.2.0"}}}]}.

